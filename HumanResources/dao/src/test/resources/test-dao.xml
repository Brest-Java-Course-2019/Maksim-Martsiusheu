<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="departmentDao" class="com.epam.courses.hr.dao.DepartmentDaoJpaImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="testDepartment" class="com.epam.courses.hr.model.Department">
        <property name="departmentId" value="1"/>
        <property name="departmentName" value="DEV"/>
        <property name="departmentDescription" value="Development Department"/>
    </bean>

</beans>